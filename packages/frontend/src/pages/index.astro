---
import '../styles/global.css';
import Navigation from '@/components/Navigation.vue'
import { Image } from 'astro:assets'
import { Button } from '@/components/ui/button'
import me from 'src/assets/me.jpg'
import KubernetesLogo from 'src/assets/kubernetes_logo.svg'
import PostgresLogo from 'src/assets/PostgreSQL_logo.svg'
import TypescriptLogo from 'src/assets/ts-logo-512.svg'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Kinnaird.scot</title>
	</head>

	<body>
		<div class="flex flex-row h-screen">
			<div class="h-screen flex-none">
				<Navigation client:load>
					<Image slot="logo" class="w-6 max-h-6 rounded-md object-contain flex-shrink-0" width="40" height="40" src="https://gravatar.com/avatar/af209d37d6bc17d6e3f3b2210f3e24da96afcd2eb3617a315eea641e9e9cc09c" alt="Peter Kinnaird Logo" loading="eager"/>
				</Navigation>
			</div>
			<div class="flex-1 p-0 m-0">
				<div class="flex flex-col h-screen">
					<div class="flex-1 w-1/4">&nbsp;</div>
					<div class="flex flex-row flex-none h-1/4">
						<div class="hidden md:flex flex-none w-1/4">&nbsp;</div>
						<div class="flex-none w-full md:w-1/4 self-center">
							<div class="p-4">
								<h1 class='text-3xl font-light'>Peter Kinnaird</h1>
								<h2 class='text-xl font-extralight'>Leader in Software Engineering & Infrastructure.</h2>
								<p class='pb-2'>Building great products and the teams behind them.</p>
								<Button>Get In Touch &gt;</Button>
							</div>
						</div>
						<div class="hidden md:flex flex-1 w-1/4 self-center">
							<div class="transform-3d animate-slow-y-axis-rotate transition-transform antialiased perspective-midrange">
								<div class="w-[40px] h-[60px] -translate-x-60 translate-y-10 -translate-z-60  absolute rounded-2xl">
									<KubernetesLogo width={128} height={128} />
								</div>
								<div class="w-[80px] h-[120px] translate-x-140 translate-y-10 -translate-z-20 rotate-y-45 absolute rounded-2xl">
									<PostgresLogo width={128} height={128} />
								</div>
								<div class="w-[80px] h-[120px] -translate-x-60 translate-y-120 -translate-z-30 rotate-y-3 absolute rounded-2xl animate-slow-y-axis-rotate">
									<TypescriptLogo width={128} height={128} />
								</div>
								<Image src={me} width="480" height="640" class="rounded-2xl drop-shadow-2xl" alt="Image of Peter Kinnaird"></Image>
							</div>
						</div>
					</div>
				<div class="flex-1 h-1/4"></div>
			</div>
		</div>
	</body>
</html>
